<div class="banner flex h-[80vh]" style="margin-top: -120px;">
    <video style="filter: brightness(50%);" class="m-auto w-full h-full object-cover" src="{{ section.settings.video.sources[1].url }}" loop muted playsinline autoplay></video>

    <div class="absolute text-white text-justify" style="top: 40%; right: 10%; left: 60%;">
        <p style="text-align: justify; opacity: 50%;" class="sm:text-xs">
            {{ section.settings.text }}
        </p>
        <button class="mt-10 w-full text-center hover:opacity-0" style="opacity: 50%;">{{ section.settings.txtBtn }}</button>
    </div>
</div>


{% schema %}
{
    "name": "Slideshow",
    "tag": "section",
    "class": "slideshow",
    "limit": 1,
    "settings": [
        {
            "type": "text",
            "id": "text",
            "label": "Slideshow"
        },
        {
            "type": "text",
            "id": "txtBtn",
            "label": "Button"
        },
        {
            "type": "video",
            "id": "video",
            "label": "video"
        }
    ]
}
{% endschema %}
